<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
  <div class="container">
    <h1 class="display-5 mb-3">Mon Profil</h1>

    <!-- form to display private data -->
    <div class="card bg-light mb-3" style="width: 70%;">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Prénom : <%=@user.first_name%></li>
        <li class="list-group-item">Nom : <%=current_user.last_name%></li>
        <li class="list-group-item">Description : <%=current_user.description%></li>
        <li class="list-group-item">Email : <%=current_user.email%></li>
      </ul>
    </div>

    <!-- link to update registration and private data -->
    <%= link_to "Modifier mes informations personnelles »", edit_user_registration_path, controller:'devise/registrations', method: :get, class:"btn btn-primary" %>
  </div>
</div>



